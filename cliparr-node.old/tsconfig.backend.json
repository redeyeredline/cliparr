{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/backend/*"]
    },
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules", "dist"]
} 