{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug Frontend in Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/cliparr-next/frontend",
            "pathMappings": [
                {
                    "url": "http://localhost:5173",
                    "path": "${workspaceFolder}/cliparr-next/frontend"
                }
            ]
        },
        {
            "name": "Debug Production Build in Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}/cliparr-next/frontend",
            "pathMappings": [
                {
                    "url": "http://localhost:5000",
                    "path": "${workspaceFolder}/cliparr-next/frontend"
                }
            ]
        }
    ]
} 